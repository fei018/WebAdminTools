
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <p>WebAdminTools Login</p>
    <hr/>
    <div>
        @using (Html.BeginForm("DoLogin", "Account", FormMethod.Post))
        {            
        <table align="center">
            <tr>
                <td>
                    <label>Login Name:</label>
                </td>
                <td>
                    <input type="text" name="UserName" value="" />
                </td>
                <td>@Html.ValidationMessage("UserName", new { style = "color:red;" })</td>
            </tr>
            <tr>
                <td>
                    <label>Password:</label>
                </td>
                <td>
                    <input type="password" name="Password" value="" />
                </td>
                <td>@Html.ValidationMessage("Password", new { style = "color:red;" })</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" name="Submit" value="Login" /></td>
            </tr>
            <tr>
                <td colspan="3">
                    @Html.ValidationMessage("LoginError", new { style = "color:red;" })
                </td>
            </tr>
        </table>
        }
    </div>
</body>
</html>
